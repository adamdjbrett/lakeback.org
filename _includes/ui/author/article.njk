<div class="container-fluid bg-body-tertiary">
<div class="row">
<div class="col-md-10 mx-auto p-3 p-md-5 text-center" aria-label="Author Profile">
<h2>{{ author.name }} Post</h2>
</div>  
{% set authorPosts = collections.all | getPostsByAuthor(author.key) %}
{% for post in authorPosts %}
<div class="post_list_article col-md-6">
<a href="{{post.url}}" title="{{post.data.title}}"><img class="img-fluid img_post_list shadow-sm" width="100%" height="100%" alt="{{post.data.title}}" 
src="{{post.data.image}}"/></a>
<div class="p-3">
<h3 class="text-body"><a href="{{post.url}}" class="non">{{post.data.title}}</a></h3>
<p>{{post.data.description}}</p>
</div>
</div>
{% endfor %}
</div>