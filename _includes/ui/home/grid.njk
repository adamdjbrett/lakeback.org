<div class="tab-pane fade show active" id="pills-grid" role="tabpanel" aria-labelledby="pills-grid-tab" tabindex="0">
<div class="row">
{% for post in collections.posts | reverse | limit (4) %}
<div class="post_list_article col-md-6">
<a href="{{post.url}}"><img class="img-fluid img_post_list shadow-sm" width="100%" height="100%" alt="{{post.data.title}}" 
loading="lazy" src="{{post.data.image or metadata.image}}"/></a>
<div class="p-3">
<h3 class="text-body"><a href="{{post.url}}" class="non">{{post.data.title}}</a></h3>
<p>{{post.data.description}}</p>
{% if post.data.authors %}<p>by 
{% for authorKey in post.data.authors %}{% set author = authors | getAuthor(authorKey) %}
{% if author %}
<span class="ms-2 me-2"><img class="img_profile me-1" width="100%" height="100%" alt="{{ author.name }}" loading="lazy"
src="{{ author.image }}"/>
<a href="/authors/{{ author.key }}/">{{ author.name }}</a></span>{% if not loop.last %} {% endif %}
{% endif %}{% endfor %}</p>{% endif %}
</div>
</div>
{% endfor %}
</div>
</div>