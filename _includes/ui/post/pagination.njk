{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="col-md-10 mx-auto" aria-label="Pagination Post">
<div class="row">
<div class="col-md-6">{%- if previousPost %}
<div class="post-nav previous"><a title="{{ previousPost.data.title }}" href="{{ previousPost.url }}" class="non">
<p class="small">
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short arrow" viewBox="0 0 16 16">
<path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5"/>
</svg>
Previous
</p>
<h3>{{ previousPost.data.title }}</h3>
</a></div>{% endif %}
</div>
<div class="col-md-6">{%- if nextPost %}
<div class="post-nav next text-end"><a title="{{ nextPost.data.title }}" href="{{ nextPost.url }}" class="non">
<p class="small">
Next
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-short arrow" viewBox="0 0 16 16">
<path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>
</svg>
</p>
<h3>{{ nextPost.data.title }}</h3>
</a></div>{%- endif %}
</div>
</div>
</div>
{%- endif %}
{%- endif %}