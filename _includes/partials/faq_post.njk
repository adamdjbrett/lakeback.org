<div class="d-flex gap-2 mb-3">
<button class="btn btn-outline-secondary btn-sm" type="button" data-faq-expand-all>Expand all</button>
<button class="btn btn-outline-secondary btn-sm" type="button" data-faq-close-all>Close all</button>
</div>
<div class="accordion" id="accordionFAQ" data-faq-controls="true">
<div class="accordion-item">
<h2 class="accordion-header">
<button class="accordion-button btn-cta" type="button" data-bs-toggle="collapse" aria-label="answer" data-bs-target="#collapseFAQ" aria-expanded="true" aria-controls="collapseOne">
{{faq_active.q| md | safe}}
</button>
</h2>
<div id="collapseFAQ" class="accordion-collapse collapse show" aria-label="question">
<div class="accordion-body">
{{faq_active.a| md | safe}}
</div>
</div>
</div>
{% for fa in faq %}
<div class="accordion-item">
<h2 class="accordion-header">
<button class="accordion-button collapsed btn-cta" type="button" aria-label="answer" data-bs-toggle="collapse" data-bs-target="#collapse{{fa.sort}}" aria-expanded="false" aria-controls="collapse{{fa.sort}}">
{{fa.q| md | safe}}
</button>
</h2>
<div id="collapse{{fa.sort}}" class="accordion-collapse collapse" aria-label="question">
<div class="accordion-body">
{{fa.a| md | safe}}
</div>
</div>
</div>
{% endfor %}
<div class="accordion-item">
<h2 class="accordion-header">
<button class="accordion-button collapsed btn-cta" type="button" data-bs-toggle="collapse" aria-label="answer" data-bs-target="#collapseFAQImage" aria-expanded="true" aria-controls="collapseEnd">
{{faq_end.title| md | safe}}
</button>
</h2>
<div id="collapseFAQImage" class="accordion-collapse collapse" aria-label="question">
<div class="accordion-body">
<img class="img-fluid shadow-sm rounded mb-3" alt="{{faq_end.alt}}" src="{{faq_end.image}}" loading="lazy"/>
{{faq_end.text| md | safe}}
</div>
</div>
</div>
</div>
{%- js %}{% include "public/js/faq-controls.js" %}{% endjs %}
